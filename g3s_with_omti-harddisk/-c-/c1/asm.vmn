2 if $pt=z80;$d$u:;era $pn.bak;zas $pn;if ~er;zlink $d:$pn,asm:grwlib/,asm:grxlib/,asm:vlib/,asm:z3lib/,asm:syslib/;era *.rel;else;sak /p2 errors;fi;else;sak /p2 not z80 type;fi
