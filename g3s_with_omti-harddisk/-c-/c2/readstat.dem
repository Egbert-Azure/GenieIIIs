(*************************************************************************)
(*                   Demoprogramm zu READSTAT.INC                        *)
(*************************************************************************)
program ReadZeichenMitStatusDemo;

{$i READSTAT.INC}
var c : char;

procedure SchreibStatus;
  begin
    write('Tastatus-Status: ');
    if Ins in T_Status then write('Ins ');
    if Num in T_Status then write('Num ');
    if Caps in T_Status then write('Caps ');
    if Scroll in T_Status then write('Scroll ');
    if Alt in T_Status then write('Alt ');
    if Links in T_Status then write('LinksShift ');
    if Rechts in T_Status then write('RechtsShift ');
    if Ctrl in T_Status then write('Ctrl ');
    writeln;
  end;

begin
  repeat
    write('Eingabe eines Zeichens : ');
    LiesZeichen(c); writeln(c);
    SchreibStatus;
  until (Links in T_Status) and (Rechts in T_Status) and (c='A');
end.
